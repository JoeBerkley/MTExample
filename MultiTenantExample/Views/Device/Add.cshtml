@model AddEditDeviceViewModel
@{
    ViewData["Title"] = "Add Device";
}

<h2>Add Device</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Make" class="control-label"></label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DeviceModel" class="control-label"></label>
        <input asp-for="DeviceModel" class="form-control" />
        <span asp-validation-for="DeviceModel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Device" class="btn btn-primary" />
    </div>
</form>
